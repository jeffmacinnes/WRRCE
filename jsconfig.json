{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "$actions/*": ["src/actions/*"],
      "$assets/*": ["src/assets/*"],
      "$components/*": ["src/components/*"],
      "$data/*": ["src/data/*"],
      "$stores/*": ["src/stores/*"],
      "$styles/*": ["src/styles/*"],
      "$svg/*": ["src/svg/*"],
      "$utils/*": ["src/utils/*"]
    }
  },
  "include": ["src/**/*.js", "src/**/*.svelte"],
  "exclude": ["scripts/*.js"]
}
